<!DOCTYPE InterfaceSpec SYSTEM "InterfaceSpec.dtd">

<InterfaceSpec Name="PartsOrderOutgoing">

	<Lines RecordIdentification="TypeIdentifier" IdentifierPos="0" IdentifierLength="2" RecordOrder="Structured">
