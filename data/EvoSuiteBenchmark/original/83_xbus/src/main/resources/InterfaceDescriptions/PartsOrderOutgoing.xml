			<Field Name="Filler" Length="9" Format="blank" />
			<Field Name="CustomerOrderNumber" Length="10" Format="alpha" />
			<Field Name="Filler" Length="6" Format="blank" />
		</RecordTypeSpec>

		<RecordTypeSpec Name="OrderLine">
			<Field Name="RecordType" Length="2" Format="const" Value="S2" />
			<Field Name="Filler" Length="2" Format="blank" />
			<Field Name="PartNumber" Length="15" Format="alpha" />
			<Field Name="CustomerNumber" Length="5" Format="alpha" />
			<Field Name="CustomerOrderNumber" Length="10" Format="alpha" />
			<Field Name="Quantity" Length="6" Format="num" />
			<Field Name="TextForDealerUse" Length="10" Format="alpha" />
			<Field Name="Filler" Length="30" Format="blank" />
		</RecordTypeSpec>

	</RecordTypes>

</InterfaceSpec>
