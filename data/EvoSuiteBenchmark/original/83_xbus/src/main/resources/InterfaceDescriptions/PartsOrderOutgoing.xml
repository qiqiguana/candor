			<RecordType Identifier="S1" Occurrences="1">OrderHeader</RecordType>
			<RecordType Identifier="S2" Occurrences="1..*">OrderLine</RecordType>
		</RecordGroup>
	</Lines>
		 
	<RecordTypes>
	
		<RecordTypeSpec Name="OrderHeader">
			<Field Name="RecordType" Length="2" Format="const" Value="S1" />
