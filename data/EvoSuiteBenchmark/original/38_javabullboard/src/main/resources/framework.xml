  <!-- VIEW -->
        <view>
          <defaultTargetClassName>java.util.HashMap</defaultTargetClassName>
          <fileExtension>vxml</fileExtension>
          <rulesFilePath>/web/WEB-INF/config/digester/rules.view.xml</rulesFilePath>
          <repository>
            <use>true</use>
            <path>/web/WEB-INF/test</path>
          </repository>
          <tuning>
            <defaultMaxFetchSize>100</defaultMaxFetchSize>
          </tuning>
        </view>
  
  <!-- ENTITY -->
        <entity>
          <defaultTargetClassName>java.util.HashMap</defaultTargetClassName>
          <fileExtension>exml</fileExtension>
          <rulesFilePath>/web/WEB-INF/config/digester/rules.entity.xml</rulesFilePath>
          <repository>
            <use>true</use>
            <path>/web/WEB-INF/test</path>
          </repository>
        </entity>
  
  <!-- TOOLS -->
        <tools>
          <dbcollection>
            <valueColumnName>Value</valueColumnName>
            <labelColumnName>Label</labelColumnName>
            <cacheSize>10</cacheSize>
