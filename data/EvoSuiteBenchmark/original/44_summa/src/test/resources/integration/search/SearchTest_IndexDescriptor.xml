<?xml version="1.0" encoding="UTF-8"?>
<IndexDescriptor version="1.0" xmlns="http://statsbiblioteket.dk/summa/2008/IndexDescriptor">

    <groups>
        <group name="au">
            <field ref="author_person"/>
        </group>
        <group name="ti">
            <field ref="main_titel"/>
        </group>
        <group name="su">
            <field ref="lsu_oai"/>
        </group>
        <group name="lma">
            <field ref="lma_long"/>
        </group>
    </groups>

    <fields>
        <!-- TODO: Check how defaultType="token" works -->
        <field name="token" indexed="true" inFreeText="true" required="true"/>
        <!-- TODO: Consider compression of shortformat -->
        <field name="shortformat" parent="stored" indexed="false" inFreeText="false" required="true"/>
        <field name="author_person" parent="verbatim" inFreeText="true" multiValued="true" queryBoost="10"/>
        <field name="main_titel" parent="text" inFreeText="true" queryBoost="10"/>
        <field name="multi_title" parent="text" inFreeText="true" multiValued="true" queryBoost="2"/>
        <field name="stilling" parent="text" inFreeText="true" multiValued="true" queryBoost="0.5"/>
        <field name="lsu_oai" parent="keyword" multiValued="false" queryBoost="10"/>
        <field name="no" parent="token" queryBoost="7"/>
        <field name="ma_long" parent="text" multiValued="true"/>
        <field name="lma_long" parent="keyword"/>
        <field name="sort_verify" parent="keyword" stored="true" /> <!-- Used by page test in SearchTest -->
        <field name="sort_title" parent="keyword" sortLocale="da"/>
    </fields>

    <defaultSearchFields>
        <field ref="freetext"/>
        <field ref="au"/>
        <field ref="ti"/>
        <field ref="su"/>
        <field ref="lma"/>
    </defaultSearchFields>

    <facets xmlns="http://statsbiblioteket.dk/summa/2009/FacetIndexDescriptor">
        <facet ref="author_person" name="author"/>
        <facet ref="sort_title" name="title"/>
    </facets>

</IndexDescriptor>
